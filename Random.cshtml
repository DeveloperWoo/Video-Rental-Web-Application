@model VideoRental.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment
    On multiple lines
*@

@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2> <!-- @Model  is the model passed from Controller-->
<!-- @Model.Customers -->

@if (Model.Customers.Count == 0)
{
    <text>No one har rented this movie before.</text> <!--Razor-->
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>    
}

